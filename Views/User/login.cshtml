@{ ViewData["Title"] = "Login"; }
@model stupid.ViewModels.LoginViewModel

<div class="wide-login">
    <div class="layer">

        <div class="container">
            <div class="body-content">
                <div class="row">
                   <div class="col-3">
                    </div>
                    <div class="col-6">
    
                        <div class="info-block">
                            <h1>Login</h1>

                                <form asp-controller="User" asp-action="login" method="post">
                                    <div class="row">
                                        <div class="col-10">
                                            <div class="form-group row">
                                                <label asp-for="email" class="col-sm-3 col-form-label"></label>
                                            <div class="col-sm-8">
                                                <input asp-for="email" class="form-control"/>
                                                <span asp-validation-for="email"></span>
                                            </div>
                                            </div>
                                            <div class="form-group row">
                                                <label asp-for="password" class="col-sm-3 col-form-label"></label>
                                            <div class="col-sm-8">
                                                <input type="password" asp-for="password" class="form-control"/>
                                                <span asp-validation-for="password"></span>
                                            </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Login</button>
                                        </div>
                                    </div>
                                </form>
                                <p>Not yet registered? <a href="/register">Register now!</>
                            </div>
                        </div>
                    <div class="col">
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>