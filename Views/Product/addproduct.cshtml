@{ ViewData["Title"] = "Add Product"; } @model stupid.ViewModels.ProductViewModel

<div class="wide-add-product">
    <div class="layer">

        <div class="container">
            <div class="body-content">
                    
                        <div class="info-block">
                            <h1>Add Product</h1>

                            <form asp-controller="Product" asp-action="add_product" method="post">
                                <div class="row">
                                    <div class="col-5">
                                <div class="form-group row">
                                    <label asp-for="name" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="name" class="form-control"/>
                                        <span asp-validation-for="name"></span>
                                    </div>
                                </div>
                                                                    
                                <div class="form-group row">
                                    <label asp-for="cost" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="cost" class="form-control"/>
                                        <span asp-validation-for="cost"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="category" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="category" class="form-control"/>
                                        <span asp-validation-for="category"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="img_src" class="col-sm-4 col-form-label"></label>
                                    <input type="file" class="file">
                                    <div class="input-group col-sm-8">
                                        <input type="text" class="form-control input-lg" disabled placeholder="Upload Image">
                                        <span class="input-group-btn">
                                            <button class="browse btn btn-primary input-lg" type="button">Browse</button>
                                        </span>
                                    </div>
                                </div>
                                    <button type="submit" class="btn btn-primary">Create Product</button>

                                </div>
                                <div class="col-7">
                                 <div class="form-group row">
                                        <label asp-for="description" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <textarea cols="50" rows="6" asp-for="description" class="form-control"/></textarea>
                                            <span asp-validation-for="description"></span>
                                        </div>
                                </div>
                                </div>
                            </form>
                        </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>