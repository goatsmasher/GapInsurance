@{ ViewData["Title"] = "Shopping Cart"; }
<div class="container">
    <h2 style="padding-top:3%; padding-bottom:3%">Shopping Cart</h2>
    <table class="table">
    @{ if(@ViewBag.my_cart != null){
        <thead class="thead-default">
            <tr>
                <th></th>
                <th>Policy id#</th>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        }
        }
        <tbody>
            @{ foreach(var item in @ViewBag.my_cart){
            <tr>
                <td><img src="~/images/products/item.img_src" height="100px" width="100px"></td>
                <td>@item.Products_id</td>
                <td></td>
                <td>$</td>
            </tr>
            }}
        </tbody>
    </table>
    <h3>Total: $678</h3>
    <a href="/check_out" class="btn btn-primary">Check Out</a>
</div>